<Label>:
    font_name: 'Roboto'
    font_size: 35
    markup: True

<RobotoButton@Button>:
    font_name: 'Roboto'
    font_size: 25
    bold: True
    background_normal: 'button_normal.png'
    background_down: 'button_down.png'
    border: (2, 2, 2, 2)

<KivyNetatmoClock>:
    direction: 'right'
    loop: True

	BoxLayout:
    	orientation: 'vertical'

    	Label:
        	id: time
        	text: 'Starting...'
        	font_size: 60
    	Label:
	    	id: outsidetempminmax
    		text: "-"
    	Label:
	        id: pressurehumidity
    	    text: "-"
    	Label:
	        id: rain
    	    text: "-"
    	Label:
	    	id: status
    		text: "-"
    		font_size: 25
    	
    	
    
    	GridLayout:
	        height: 90
        	orientation: 'vertical'
        	size_hint: (1, None)
        	padding: 20
        	spacing: 20
        	cols:5
        	
            
            RobotoButton:
    	        id: reset
        	    text: 'Start'
            	on_press: app.reset()
            	background_normal: 'red_button_normal.png'
            	background_down: 'red_button_down.png'
        	RobotoButton:
            	id: start_music
            	text: 'Musik an'
            	on_press: app.start_stop()
        	RobotoButton:
	            id: stop_music
    	        text: 'Musik aus'
        	    on_press: app.start_stop()
            RobotoButton:
            	id: button_alarm
            	text: 'Alarm'
            	on_press: app.start_debug()
            RobotoButton:
            	id: restart
            	text: 'Restart'
            	on_press: app.appstop()
            	
            
            
	BoxLayout:
    	orientation: 'vertical'

    	Label:
        	id: debug
        	text: 'Debug...'
        	font_size: 25
        	
    	RobotoButton:
            id: button_debug
            text: 'Debug'
            on_press: app.start_debug()